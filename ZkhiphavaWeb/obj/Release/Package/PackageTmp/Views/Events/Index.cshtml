@model IEnumerable<ZkhiphavaWeb.Models.Event>

@{
    ViewBag.Title = "Events";
}
    <div class="row">

        <h2 style="text-align:center; font-family:'Segoe Print'">Main events</h2>
        <hr />
        @foreach (var ev in Model.Where(x => x.indawoId == 9))
        {

            <div class="col-md-4">
                <div class="card" style="width: 50rem;">
                    <h3 style="font-family:'Segoe Print'" class="yellow">@ev.title.ToUpper()</h3>
                    <img style="width:300px; height: 200px;" src=@ev.imgPath class="card-img-top" alt="...">
                    <div class="card-body">
                        @Html.ActionLink("Details", "Details", new { id = @ev.id }, new { @class = "btn btn-primary" })
                        <a class="btn btn-primary" onclick="getDirections('@ev.address')">Directions</a>
                        <a class="btn btn-primary"> Tickets</a>
                    </div>
                </div>
            </div>
        }

    </div>       
    <br />
    <div class="row">
        @if (Model.Where(x => x.indawoId != 9).Count() != 0)
        {
            <h2 style="text-align:center;font-family:'Segoe Print'">Location events</h2>
            <hr />
        }


        <div class="col-md-4">
            @foreach (var item in Model.Where(x => x.indawoId != 9))
            {
                <div class="card" style="width: 50rem;">
                    <h3 style="font-family:'Segoe Print'" class="yellow">@item.title.ToUpper()</h3>
                    <img style="width:300px; height: 200px;" src=@item.imgPath class="card-img-top" alt="...">
                    <div class="card-body">
                        @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-primary" })
                        <a class="btn btn-primary" onclick="getDirections('@item.address')">Directions</a>
                        <a class="btn btn-primary"> Tickets</a>
                    </div>
                </div>
            }
        </div>
    </div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    function getDirections(address) {
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(function (position) {
                window.location.href = 'https://maps.google.com/maps?saddr=' +
                    position.coords.latitude.toString() + ', ' + position.coords.longitude.toString() + '&daddr=' + encodeURIComponent(address);
            });
        } else {
            x.innerHTML = "Geolocation is not supported by this browser.";
        }
    }

</script>

